pipeline {
    agent any
    tools {
      maven 'maven-3'
    }
    parameters {
        booleanParam(name: 'RUN_DEPLOY', defaultValue: false)
    }
    stages {
        stage('Build') {
            steps {
                sh 'mvn clean package -DskipTests'
            }
        }
        stage('Test') {
            steps {
                sh 'mvn test'
            }
        }
        stage('Deploy') {
            when {
                allOf {
                    branch 'main'
                    expression { params.RUN_DEPLOY }
                }
            }
            steps {
                sh './deploy.sh'
            }
        }
    }
}
