pipeline {
    agent any
    tools {
        maven 'maven-3'
    }

    stages {

        stage('Detect PR') {
            steps {
                script {
                    if (env.CHANGE_ID) {
                        echo "PR detected: ${env.CHANGE_ID}"
                    } else {
                        error "Not a PR build"
                    }
                }
            }
        }

        stage('Build') {
            when {
                expression { env.CHANGE_ID != null }
            }
            steps {
                sh 'mvn clean package -DskipTests'
            }
        }

        stage('Test') {
            when {
                expression { env.CHANGE_ID != null }
            }
            steps {
                sh 'mvn test'
            }
        }
    }

    post {
        failure {
            echo "PR validation failed"
        }
        success {
            echo "PR validation passed"
        }
    }
}
