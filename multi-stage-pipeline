pipeline {
    agent any
    tools {
        maven 'maven-3'
    }
    environment {
        SONAR_TOKEN = credentials('sonar-cred')
    }
    stages {
        stage('Build') {
            steps {
                sh 'mvn clean package -DskipTests'
            }
        }
        stage('Parallel Verification') {
            parallel {
                stage('Test') {
                    steps {
                        sh 'mvn test'
                    }
                }
                stage('Static Analysis') {
                    steps {
                        sh 'mvn validate'
                    }
                }
                stage('Code Quality Analysis') {
                    steps {
                        withSonarQubeEnv('sonarqube-server') {
                            sh 'mvn sonar:sonar -Dsonar.login=$SONAR_TOKEN'
                        }
                    }
                }
            }
        }
        
        stage('Store artifacts to Nexus') {
            steps {
                sh 'mvn deploy'
            }
        }
    }
    post {
        success {
            echo "Build and Publish successfully"
        }
        failure {
            echo "Pipeline Failed"
        }
    }
}
