pipeline {
    agent any
    tools {
        maven 'maven-3'
    }
    stages {
        stage('Build') {
            steps {
                sh 'mvn clean install'
            }
        }
        stage('Test') {
            steps {
                sh 'mvn test'
            }
        }
        stage('Store artifacts to Nexus') {
            steps {
                sh 'mvn deploy'
            }
        }
    }
    post {
        success {
            echo "Build and Publish successfully"
        }
        failure {
            echo "Pipeline Failed"
        }
    }
}
